#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/behaviors.h>

#define SCROLL 1

/* どこかの共通ヘッダの近くに */

#define BASE        0
#define ROT_90      1
#define ROT_180     2
#define ROT_270     3
#define Scroll_L0   4
#define Scroll_L90  5
#define Scroll_L180 6
#define Scroll_L270 7
#define SELECT_BT   8     /* BT設定レイヤー */

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&lt {
    quick-tap-ms = <300>;
    flavor = "balanced";
};

/ {

  behaviors {
    /* --- レイヤー移動の 0 引数ラッパー --- */
    to_base: to_base {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&to BASE>;
    };

    to_rot90: to_rot90 {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&to ROT_90>;
    };

    to_rot180: to_rot180 {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&to ROT_180>;
    };

    to_rot270: to_rot270 {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&to ROT_270>;
    };

    /* --- 1秒長押しでだけ発火する Hold-Tap --- */
    ht_rot0: ht_rot0 {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <0>;
      flavor = "hold-preferred";
      tapping-term-ms = <1000>;  /* 1秒 */
      quick-tap-ms = <0>;
      bindings = <&to_base &none>;   /* ← phandles だけ */
    };

    ht_rot90: ht_rot90 {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <0>;
      flavor = "hold-preferred";
      tapping-term-ms = <1000>;
      quick-tap-ms = <0>;
      bindings = <&to_rot90 &none>;
    };

    ht_rot180: ht_rot180 {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <0>;
      flavor = "hold-preferred";
      tapping-term-ms = <1000>;
      quick-tap-ms = <0>;
      bindings = <&to_rot180 &none>;
    };

    ht_rot270: ht_rot270 {
      compatible = "zmk,behavior-hold-tap";
      #binding-cells = <0>;
      flavor = "hold-preferred";
      tapping-term-ms = <1000>;
      quick-tap-ms = <0>;
      bindings = <&to_rot270 &none>;
    };
  };

    /* --- コンボ定義 --- */

    combos {
        compatible = "zmk,combos";

        /* 同時押しで 設定レイヤーを開閉（トグル） */

        combo_bt_select {
            timeout-ms = <50>;              /* 反応が鈍ければ少し上げる(例: 60〜80) */
            key-positions = <5 0>;        /* ← ここは “1/2/3 キーの物理位置” */
            bindings = <&mo 8>;   /* 入る/出るをトグル */
            /* 必要なら layers = <BASE L1 L2>; を付けて適用範囲を絞る */

            layers = <6>;
        };

        r0 {
            timeout-ms = <4 0>;
            bindings = <&ht_rot0>;     /* ★1秒ホールドで 0 へ */
            key-positions = <4 5>;
        };

        r90 {
            timeout-ms = <50>;              /* 反応が鈍ければ少し上げる(例: 60〜80) */
            bindings = <&ht_rot90>;     /* ★1秒ホールドで 90 へ */
            key-positions = <4 3>;
        };

        r180 {
            timeout-ms = <50>;              /* 反応が鈍ければ少し上げる(例: 60〜80) */
            bindings = <&ht_rot180>;     /* ★1秒ホールドで 180 へ */
            key-positions = <1 2>;
        };

        r270 {
            timeout-ms = <50>;              /* 反応が鈍ければ少し上げる(例: 60〜80) */
            bindings = <&ht_rot270>;     /* ★1秒ホールドで 270 へ */
            key-positions = <1 0>;
        };
    };

    /* 入力プロセッサ（回転設定） */

    trackball_listener: trackball_listener {
        compatible = "zmk,input-listener";
        status = "okay";

        /* 基本(0°) = XY入替 完成済み*/

        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP)>;

        rot90 {
            layers = <ROT_90>;

            /* 90° = XY入替 + X反転 完成済み */

            input-processors = <&zip_xy_transform (INPUT_TRANSFORM_X_INVERT)>;
        };

        rot180 {
            layers = <ROT_180>;

            /* 180° =XY入替 + Y反転 完成済み */

            input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)>;
        };

        rot270 {
            layers = <ROT_270>;

            /* 270° = Y反転 完成済み */

            input-processors = <&zip_xy_transform (INPUT_TRANSFORM_Y_INVERT)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        /* 6キー想定（2×3）: 行ごとに3つずつ並べて6個 */

        base {
            label = "BASE";
            bindings = <
&kp ENTER  &lt 4 SPACE  &mkp LCLK  &mt RCTRL BACKSPACE  &mkp RCLK  &mkp LCLK
            >;
        };

        /* 回転 */

        rot90 {
            label = "ROT_90";
            bindings = <
&mkp RCLK  &mt RCTRL BACKSPACE  &kp ENTER  &lt 5 SPACE  &mkp LCLK  &mkp LCLK
            >;
        };

        rot180 {
            label = "ROT_180";
            bindings = <
&mkp LCLK  &mkp LCLK  &mkp RCLK  &mkp LCLK  &lt 6 SPACE  &mkp MCLK
            >;
        };

        rot270 {
            label = "ROT_270";
            bindings = <
&mkp RCLK  &mt RCTRL BACKSPACE  &kp ENTER  &lt 7 SPACE  &mkp LCLK  &mkp LCLK
            >;
        };

        /* スクロール用 */

        Scroll_L0 {
            label = "Scroll_L0 ";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        Scroll_L90 {
            label = "Scroll_L90";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        Scroll_L180 {
            label = "Scroll_L180";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        Scroll_L270 {
            label = "Scroll_L270";
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans
            >;
        };

        /* 設定(選択)レイヤー：回転を選んで 6 で確定（閉じる） */

        selbt {
            label = "SELECT_BT";
            bindings = <
&trans  &bt BT_SEL 3  &bt BT_SEL 2  &bt BT_SEL 1  &bt BT_SEL 0  &trans
            >;
        };
    };
};
